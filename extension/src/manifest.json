{
  "manifest_version": 3,
  "name": "Language Learning Assistant",
  "version": "1.0",
  "description": "Easily send articles to your language learning app for translation",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://*.yourdomain.com/*"
  ],
  "action": {
    "default_popup": "popup/popup.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
} 